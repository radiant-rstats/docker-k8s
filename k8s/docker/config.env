#!/bin/bash
# Configuration file for student container management system
# Source this file in scripts: source /opt/docker-containers/config.env

# Docker image settings
DOCKER_IMAGE="vnijs/rsm-msba-k8s:latest"
DOCKER_IMAGE_GPU="vnijs/rsm-msba-k8s-gpu:latest"

# Container resource limits
MEMORY_LIMIT="16g"
CPU_LIMIT="2"
MEMORY_RESERVATION="8g"

# Port configuration
# Base port for regular containers (student aaa111 -> port 20111)
PORT_BASE=20000
# Base port for GPU containers (student aaa111 -> port 25111)
PORT_BASE_GPU=25000
# Port range limits (for collision detection)
PORT_MIN=20000
PORT_MAX=29999

# Container naming
CONTAINER_PREFIX="rsm-msba"
CONTAINER_PREFIX_GPU="rsm-msba-gpu"

# Paths
SCRIPT_DIR="/opt/docker-containers"
LOG_DIR="/var/log/student-containers"
TMP_DIR="/tmp/student-containers"

# Timeout settings
CONTAINER_START_TIMEOUT=30  # seconds to wait for container SSH to be ready
IDLE_TIMEOUT=86400          # 24 hours in seconds

# Monitoring thresholds
RAM_WARNING_THRESHOLD=90    # Percent
DISK_WARNING_THRESHOLD=90   # Percent

# Email notification settings
ALERT_EMAIL="admin@yourdomain.edu"
SMTP_HOST="localhost"

# Server hostname (for SSH config generation)
SERVER_HOSTNAME="sc2.yourdomain.edu"

# Timezone
TZ="America/Los_Angeles"

# Container user settings
CONTAINER_USER="jovyan"
CONTAINER_HOME="/home/jovyan"
CONTAINER_SHELL="/bin/zsh"
CONTAINER_ZDOTDIR="/home/jovyan/.rsm-msba/zsh"
CONTAINER_RSMBASE="/home/jovyan/.rsm-msba"
