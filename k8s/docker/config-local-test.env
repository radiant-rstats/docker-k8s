#!/bin/bash
# LOCAL TEST Configuration - for testing on your laptop/desktop before deploying to sc2
# Copy this to config.env for local testing

# Docker image settings
DOCKER_IMAGE="vnijs/rsm-msba-k8s:latest"
DOCKER_IMAGE_GPU="vnijs/rsm-msba-k8s-gpu:latest"

# Container resource limits
MEMORY_LIMIT="16g"
CPU_LIMIT="2"
MEMORY_RESERVATION="8g"

# Port configuration
PORT_BASE=20000
PORT_BASE_GPU=25000
PORT_MIN=20000
PORT_MAX=29999

# Container naming
CONTAINER_PREFIX="rsm-msba"
CONTAINER_PREFIX_GPU="rsm-msba-gpu"

# Paths - LOCAL TESTING (use home directory instead of /opt, /var)
SCRIPT_DIR="$HOME/test-docker-containers"
LOG_DIR="$HOME/test-logs"
TMP_DIR="$HOME/test-tmp"

# Timeout settings
CONTAINER_START_TIMEOUT=30
IDLE_TIMEOUT=86400

# Monitoring thresholds
RAM_WARNING_THRESHOLD=90
DISK_WARNING_THRESHOLD=90

# Email notification settings (won't work locally, that's OK)
ALERT_EMAIL="admin@yourdomain.edu"
SMTP_HOST="localhost"

# Server hostname
SERVER_HOSTNAME="localhost"

# Timezone
TZ="America/Los_Angeles"

# Container user settings
CONTAINER_USER="jovyan"
CONTAINER_HOME="/home/jovyan"
CONTAINER_SHELL="/bin/zsh"
CONTAINER_ZDOTDIR="/home/jovyan/.rsm-msba/zsh"
CONTAINER_RSMBASE="/home/jovyan/.rsm-msba"
